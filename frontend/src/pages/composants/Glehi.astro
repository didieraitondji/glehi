---
// GleHi.astro
---

<section class="glehi-hero">
  <div class="container">
    <div class="content-wrapper">
      <!-- Texte principal -->
      <div class="main-content">
        <h1 class="title">
          Prêts à Transformer l'Agriculture<br />
          au Bénin ?
        </h1>

        <div class="cta-section">
          <div class="producers-section">
            <p class="subtitle">
              <strong>Producteurs :</strong> Rejoignez<br />
              notre réseau et commencez à<br />
              vendre plus efficacement !
            </p>
            <button class="cta-button"> Inscription Producteur </button>
          </div>
        </div>
      </div>

      <!-- Smartphones -->
      <div class="phones-container">
        <div class="phone main-phone">
          <div class="phone-frame">
            <div class="phone-screen">
              <div class="glehi-logo">GleHi</div>
              <div class="phone-content">
                <div class="connection-section">
                  <div class="connection-item">Se connecter</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="phone secondary-phone">
          <div class="phone-frame">
            <div class="phone-screen">
              <div class="map-container">
                <div class="map-header">PRODUCTEURS</div>
                <div class="map-content">
                  <div class="map-regions">
                    <div class="region region-1"></div>
                    <div class="region region-2"></div>
                    <div class="region region-3"></div>
                    <div class="region region-4"></div>
                  </div>
                </div>
                <div class="map-footer">ACHETEURS</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Section acheteurs -->
      <div class="buyers-section">
        <p class="buyers-text">
          <strong>Acheteurs :</strong> Découvrez la<br />
          fraîcheur locale et soutenez nos<br />
          producteurs !
        </p>

        <div class="download-buttons">
          <a href="#" class="download-btn google-play">
            <span class="download-text">Télécharger sur</span>
            <span class="store-name">Google Play</span>
          </a>
          <a href="#" class="download-btn app-store">
            <span class="download-text">Télécharger sur</span>
            <span class="store-name">App Store</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .glehi-hero {
    background: linear-gradient(135deg, #a8c589 0%, #8fb070 100%);
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 2rem 0;
    font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    width: 100%;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 3rem;
    align-items: center;
    min-height: 500px;
  }

  .main-content {
    text-align: left;
  }

  .title {
    font-size: 2.5rem;
    font-weight: bold;
    color: white;
    margin-bottom: 3rem;
    line-height: 1.2;
  }

  .subtitle {
    color: white;
    font-size: 1.1rem;
    line-height: 1.4;
    margin-bottom: 1.5rem;
  }

  .cta-button {
    background-color: #5a7c41;
    color: white;
    border: none;
    padding: 0.8rem 1.5rem;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    background-color: #4a6635;
    transform: translateY(-2px);
  }

  .phones-container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 500px;
  }

  .phone {
    position: absolute;
  }

  .main-phone {
    z-index: 2;
    left: -30px;
  }

  .secondary-phone {
    z-index: 1;
    right: -50px;
    top: 50px;
  }

  .phone-frame {
    width: 200px;
    height: 400px;
    background: #1a1a1a;
    border-radius: 25px;
    padding: 8px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .phone-screen {
    width: 100%;
    height: 100%;
    background: white;
    border-radius: 18px;
    overflow: hidden;
    position: relative;
  }

  .glehi-logo {
    background: #2d5016;
    color: white;
    text-align: center;
    font-size: 1.8rem;
    font-weight: bold;
    padding: 1rem;
  }

  .phone-content {
    padding: 2rem 1rem;
    height: calc(100% - 60px);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .connection-section {
    background: #2d5016;
    border-radius: 8px;
    overflow: hidden;
  }

  .connection-item {
    color: white;
    padding: 1rem;
    text-align: center;
    font-weight: 600;
  }

  .map-container {
    height: 100%;
    display: flex;
    flex-direction: column;
    background: white;
  }

  .map-header,
  .map-footer {
    background: #2d5016;
    color: white;
    text-align: center;
    padding: 0.8rem;
    font-weight: bold;
    font-size: 0.9rem;
  }

  .map-content {
    flex: 1;
    padding: 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .map-regions {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
    width: 80px;
    height: 80px;
  }

  .region {
    border-radius: 8px;
  }

  .region-1 {
    background: #ff6b6b;
  }
  .region-2 {
    background: #4ecdc4;
  }
  .region-3 {
    background: #45b7d1;
  }
  .region-4 {
    background: #96ceb4;
  }

  .buyers-section {
    text-align: right;
  }

  .buyers-text {
    color: white;
    font-size: 1.1rem;
    line-height: 1.4;
    margin-bottom: 2rem;
  }

  .download-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: flex-end;
  }

  .download-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.8rem 1.2rem;
    border-radius: 8px;
    text-decoration: none;
    color: white;
    font-weight: 600;
    transition: all 0.3s ease;
    min-width: 160px;
  }

  .google-play {
    background: #5a7c41;
  }

  .app-store {
    background: #4a6635;
  }

  .download-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
  }

  .download-text {
    font-size: 0.8rem;
    opacity: 0.9;
  }

  .store-name {
    font-size: 1rem;
    font-weight: bold;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .content-wrapper {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .title {
      font-size: 2rem;
    }

    .phones-container {
      height: 400px;
    }

    .main-phone {
      left: -20px;
    }

    .secondary-phone {
      right: -30px;
      top: 30px;
    }

    .phone-frame {
      width: 160px;
      height: 320px;
    }

    .buyers-section {
      text-align: center;
    }

    .download-buttons {
      align-items: center;
    }
  }

  @media (max-width: 768px) {
    .glehi-hero {
      padding: 1rem 0;
    }

    .container {
      padding: 0 1rem;
    }

    .title {
      font-size: 1.8rem;
      margin-bottom: 2rem;
    }

    .phones-container {
      height: 300px;
      margin: 2rem 0;
    }

    .phone-frame {
      width: 140px;
      height: 280px;
    }

    .glehi-logo {
      font-size: 1.4rem;
      padding: 0.8rem;
    }

    .main-phone {
      left: -10px;
    }

    .secondary-phone {
      right: -20px;
      top: 20px;
    }

    .subtitle,
    .buyers-text {
      font-size: 1rem;
    }

    .download-buttons {
      flex-direction: row;
      justify-content: center;
      flex-wrap: wrap;
    }

    .download-btn {
      flex-direction: column;
      text-align: center;
      min-width: 120px;
      padding: 0.6rem;
    }
  }

  @media (max-width: 480px) {
    .title {
      font-size: 1.5rem;
    }

    .phones-container {
      height: 250px;
    }

    .phone-frame {
      width: 120px;
      height: 240px;
    }

    .glehi-logo {
      font-size: 1.2rem;
      padding: 0.6rem;
    }

    .download-buttons {
      flex-direction: column;
      gap: 0.8rem;
    }

    .download-btn {
      min-width: 140px;
    }
  }
</style>
