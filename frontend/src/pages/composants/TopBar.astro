---
// TopBar.astro
export interface Props {
  userName?: string;
  notificationCount?: number;
}

const { userName = "LOREM IPSUM", notificationCount = 5 } = Astro.props;
---

<div class="bg-gray-100 border-b border-gray-200 sticky top-0 z-50">
  <div class="flex items-center justify-between px-6 py-3">
    <!-- Menu hamburger et titre -->
    <div class="flex items-center space-x-4">
      <button class="p-1 text-gray-600 hover:text-gray-900">
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <h1 class="text-lg font-medium text-gray-900 uppercase tracking-wide">
        Dashboard
      </h1>
    </div>

    <!-- Profil utilisateur et notifications -->
    <div class="flex items-center space-x-4">
      <!-- Notifications -->
      <div class="relative">
        <button class="relative p-2 text-gray-600 hover:text-gray-900">
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 17h5l-5-5V9a6 6 0 10-12 0v3l-5 5h5a6 6 0 0012 0z"></path>
          </svg>
          {
            notificationCount > 0 && (
              <span class="absolute -top-1 -right-1 h-5 w-5 bg-red-500 text-white rounded-full text-xs flex items-center justify-center font-medium">
                {notificationCount}
              </span>
            )
          }
        </button>
      </div>

      <!-- Nom utilisateur -->
      <div class="text-sm font-medium text-gray-900 uppercase tracking-wide">
        {userName}
      </div>
    </div>
  </div>
</div>
