<style>
  .notfound-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #a3b18a 0%, #dad7cd 50%, #a3b18a 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    padding: 2rem 0;
  }

  /* Background Animation */
  .background-animation {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .floating-elements {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .element {
    position: absolute;
    border-radius: 50% 40% 60% 30%;
    opacity: 0.1;
    animation: float 15s ease-in-out infinite;
  }

  .element-1 {
    width: 150px;
    height: 150px;
    background: linear-gradient(45deg, #22c55e, #4ade80);
    top: 10%;
    left: 10%;
    animation-delay: 0s;
  }

  .element-2 {
    width: 100px;
    height: 120px;
    background: linear-gradient(135deg, #365314, #588157);
    top: 70%;
    right: 15%;
    animation-delay: -5s;
  }

  .element-3 {
    width: 200px;
    height: 180px;
    background: linear-gradient(225deg, #16a34a, #22c55e);
    bottom: 20%;
    left: 20%;
    animation-delay: -10s;
  }

  .element-4 {
    width: 80px;
    height: 100px;
    background: linear-gradient(315deg, #4a5d23, #a3b18a);
    top: 20%;
    right: 30%;
    animation-delay: -15s;
  }

  .gradient-circles {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .circle {
    position: absolute;
    border-radius: 50%;
    filter: blur(40px);
    opacity: 0.2;
    animation: circleFloat 12s ease-in-out infinite;
  }

  .circle-1 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, #22c55e 0%, transparent 70%);
    top: -10%;
    left: -10%;
  }

  .circle-2 {
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, #4ade80 0%, transparent 70%);
    bottom: -10%;
    right: -10%;
    animation-delay: -6s;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  .content {
    text-align: center;
    animation: fadeInUp 1s ease-out;
  }

  /* 404 Error Code */
  .error-code {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .digit {
    position: relative;
    font-size: clamp(6rem, 15vw, 12rem);
    font-weight: bold;
    color: #365314;
    text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.2);
  }

  .digit.middle {
    position: relative;
    animation: bounce 2s ease-in-out infinite;
  }

  .number {
    position: relative;
    z-index: 2;
  }

  .glitch-overlay {
    position: absolute;
    top: 0;
    left: 0;
    color: #22c55e;
    animation: glitch 3s ease-in-out infinite;
    z-index: 1;
  }

  .icon-overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 60px;
    color: #4ade80;
    animation: iconPulse 2s ease-in-out infinite;
    z-index: 3;
  }

  /* Main Message */
  .message {
    margin-bottom: 3rem;
  }

  .message h1 {
    font-size: clamp(2rem, 4vw, 3rem);
    color: #365314;
    margin-bottom: 1rem;
    font-weight: bold;
  }

  .message > p {
    font-size: 1.2rem;
    color: #4a5d23;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .suggestions {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 2rem;
    margin: 2rem 0;
    text-align: left;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .suggestions h3 {
    color: #365314;
    margin-bottom: 1rem;
    font-size: 1.3rem;
    text-align: center;
  }

  .suggestions ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .suggestions li {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.8rem 0;
    color: #4a5d23;
    font-size: 1.1rem;
    border-bottom: 1px solid rgba(163, 177, 138, 0.2);
  }

  .suggestions li:last-child {
    border-bottom: none;
  }

  .suggestions li svg {
    width: 20px;
    height: 20px;
    color: #22c55e;
    flex-shrink: 0;
  }

  /* Action Buttons */
  .actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .btn-primary,
  .btn-secondary {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border: none;
    border-radius: 25px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .btn-primary {
    background: linear-gradient(135deg, #22c55e, #16a34a);
    color: white;
    box-shadow: 0 4px 15px rgba(34, 197, 94, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(34, 197, 94, 0.4);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.9);
    color: #365314;
    border: 2px solid #a3b18a;
    backdrop-filter: blur(10px);
  }

  .btn-secondary:hover {
    background: rgba(163, 177, 138, 0.2);
    border-color: #22c55e;
    transform: translateY(-2px);
  }

  .btn-primary svg,
  .btn-secondary svg {
    width: 18px;
    height: 18px;
  }

  /* Fun Element */
  .fun-element {
    margin-top: 2rem;
  }

  .bouncing-veggie {
    position: relative;
    display: inline-block;
    margin-bottom: 1rem;
  }

  .veggie {
    font-size: 3rem;
    animation: veggieBounce 2s ease-in-out infinite;
    display: block;
  }

  .shadow {
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 8px;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 50%;
    animation: shadowScale 2s ease-in-out infinite;
  }

  .fun-text {
    color: #4a5d23;
    font-style: italic;
    font-size: 1rem;
    margin: 0;
  }

  /* Animations */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
      border-radius: 50% 40% 60% 30%;
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
      border-radius: 40% 60% 30% 50%;
    }
  }

  @keyframes circleFloat {
    0%,
    100% {
      transform: translateY(0px) translateX(0px);
    }
    50% {
      transform: translateY(-30px) translateX(20px);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  @keyframes glitch {
    0%,
    90%,
    100% {
      transform: translate(0, 0);
      opacity: 0;
    }
    91%,
    95% {
      transform: translate(-2px, 1px);
      opacity: 0.7;
    }
    96%,
    99% {
      transform: translate(2px, -1px);
      opacity: 0.5;
    }
  }

  @keyframes iconPulse {
    0%,
    100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 0.8;
    }
    50% {
      transform: translate(-50%, -50%) scale(1.2);
      opacity: 1;
    }
  }

  @keyframes veggieBounce {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    25% {
      transform: translateY(-15px) rotate(-5deg);
    }
    50% {
      transform: translateY(-25px) rotate(0deg);
    }
    75% {
      transform: translateY(-10px) rotate(5deg);
    }
  }

  @keyframes shadowScale {
    0%,
    100% {
      transform: translateX(-50%) scaleX(1);
      opacity: 0.3;
    }
    50% {
      transform: translateX(-50%) scaleX(0.8);
      opacity: 0.2;
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .error-code {
      gap: 1rem;
      margin-bottom: 2rem;
    }

    .digit {
      font-size: clamp(4rem, 12vw, 8rem);
    }

    .icon-overlay {
      width: 40px;
      height: 40px;
    }

    .suggestions {
      padding: 1.5rem;
      margin: 1.5rem 0;
    }

    .actions {
      flex-direction: column;
      align-items: center;
    }

    .btn-primary,
    .btn-secondary {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }

    .suggestions li {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 1rem;
    }

    .error-code {
      gap: 0.5rem;
    }

    .suggestions {
      padding: 1rem;
    }
  }
</style>
