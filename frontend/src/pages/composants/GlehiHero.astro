---
// GléHiHero.astro
---

<section class="glehi-hero">
  <!-- Animated Background Elements -->
  <div class="background-animation">
    <div class="floating-shapes">
      <div class="shape shape-1"></div>
      <div class="shape shape-2"></div>
      <div class="shape shape-3"></div>
      <div class="shape shape-4"></div>
      <div class="shape shape-5"></div>
      <div class="shape shape-6"></div>
    </div>

    <div class="gradient-orbs">
      <div class="orb orb-1"></div>
      <div class="orb orb-2"></div>
      <div class="orb orb-3"></div>
    </div>

    <div class="particles">
      <div class="particle particle-1"></div>
      <div class="particle particle-2"></div>
      <div class="particle particle-3"></div>
      <div class="particle particle-4"></div>
      <div class="particle particle-5"></div>
      <div class="particle particle-6"></div>
      <div class="particle particle-7"></div>
      <div class="particle particle-8"></div>
    </div>
  </div>

  <div class="container">
    <!-- Header -->
    <div class="header">
      <div class="logo">
        <div class="logo-icon">
          <svg viewBox="0 0 40 30" fill="none">
            <path d="M5 5h30v5H5z" fill="currentColor"></path>
            <path d="M10 15h20v5H10z" fill="currentColor"></path>
            <path d="M15 25h10v2H15z" fill="currentColor"></path>
          </svg>
        </div>
        <h1>GléHi Révolutionne Votre Quotidien</h1>
      </div>
      <p class="subtitle">
        Pour les Acheteurs, Fraîcheur et Économies à Portée de Main !
      </p>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <!-- Phones Section -->
      <div class="phones-section">
        <div class="phone phone-1">
          <div class="phone-frame">
            <div class="phone-screen">
              <div class="phone-content">
                <div class="app-header">
                  <div class="status-bar">
                    <span>9:41</span>
                    <div class="signal-bars">
                      <div class="bar"></div>
                      <div class="bar"></div>
                      <div class="bar"></div>
                    </div>
                  </div>
                </div>
                <div class="app-content">
                  <div class="location-icon">
                    <svg viewBox="0 0 24 24" fill="none">
                      <path
                        d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"
                        fill="#4ade80"></path>
                      <circle cx="12" cy="9" r="2.5" fill="white"></circle>
                    </svg>
                  </div>
                  <h3>Trouver Facilement, Acheter Malin !</h3>
                  <p>
                    Découvrez les produits frais de qualité près de chez vous.
                    Bénéficiez des meilleurs prix du marché en direct des
                    producteurs.
                  </p>
                  <button class="cta-button">SUIVANT</button>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="phone phone-2">
          <div class="phone-frame">
            <div class="phone-screen">
              <div class="phone-content">
                <div class="app-header">
                  <div class="logo-small">GléHi</div>
                </div>
                <div class="menu-items">
                  <div class="menu-item">Producteurs</div>
                  <div class="menu-item active">Géolocalisation</div>
                  <div class="menu-item">Communication</div>
                  <div class="menu-item">Notifications</div>
                </div>
                <div class="social-icons">
                  <div class="social-icon facebook"></div>
                  <div class="social-icon twitter"></div>
                  <div class="social-icon instagram"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Features Section -->
      <div class="features-section">
        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none">
              <path
                d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"
                fill="currentColor"></path>
            </svg>
          </div>
          <div class="feature-content">
            <h3>Recherche Géolocalisée</h3>
          </div>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none">
              <path
                d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
                fill="currentColor"></path>
            </svg>
          </div>
          <div class="feature-content">
            <h3>Communication Directe</h3>
          </div>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none">
              <path
                d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"
                fill="currentColor"></path>
            </svg>
          </div>
          <div class="feature-content">
            <h3>Variété et Qualité</h3>
          </div>
        </div>

        <div class="feature-card">
          <div class="feature-icon">
            <svg viewBox="0 0 24 24" fill="none">
              <path
                d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                fill="currentColor"></path>
            </svg>
          </div>
          <div class="feature-content">
            <h3>Prix Compétitifs</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .glehi-hero {
    background: linear-gradient(135deg, #a3b18a 0%, #dad7cd 50%, #a3b18a 100%);
    min-height: 100vh;
    padding: 2rem 0;
    position: relative;
    overflow: hidden;
  }

  /* Background Animation Container */
  .background-animation {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  /* Floating Organic Shapes */
  .floating-shapes {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .shape {
    position: absolute;
    border-radius: 50% 40% 60% 30%;
    opacity: 0.1;
    animation: morphFloat 20s ease-in-out infinite;
  }

  .shape-1 {
    width: 200px;
    height: 200px;
    background: linear-gradient(45deg, #22c55e, #16a34a);
    top: 10%;
    left: 5%;
    animation-delay: 0s;
    animation-duration: 25s;
  }

  .shape-2 {
    width: 150px;
    height: 150px;
    background: linear-gradient(135deg, #365314, #4a5d23);
    top: 60%;
    right: 10%;
    animation-delay: -5s;
    animation-duration: 30s;
  }

  .shape-3 {
    width: 300px;
    height: 250px;
    background: linear-gradient(225deg, #4ade80, #22c55e);
    top: 30%;
    left: 70%;
    animation-delay: -10s;
    animation-duration: 35s;
  }

  .shape-4 {
    width: 120px;
    height: 180px;
    background: linear-gradient(315deg, #a3b18a, #588157);
    bottom: 20%;
    left: 20%;
    animation-delay: -15s;
    animation-duration: 28s;
  }

  .shape-5 {
    width: 180px;
    height: 140px;
    background: linear-gradient(90deg, #dad7cd, #a3b18a);
    top: 5%;
    right: 30%;
    animation-delay: -20s;
    animation-duration: 32s;
  }

  .shape-6 {
    width: 220px;
    height: 200px;
    background: linear-gradient(180deg, #16a34a, #365314);
    bottom: 10%;
    right: 5%;
    animation-delay: -25s;
    animation-duration: 38s;
  }

  /* Gradient Orbs */
  .gradient-orbs {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.3;
    animation: orbFloat 15s ease-in-out infinite;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, #22c55e 0%, transparent 70%);
    top: -10%;
    left: -10%;
    animation-delay: 0s;
  }

  .orb-2 {
    width: 350px;
    height: 350px;
    background: radial-gradient(circle, #4ade80 0%, transparent 70%);
    bottom: -10%;
    right: -10%;
    animation-delay: -7s;
  }

  .orb-3 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, #365314 0%, transparent 70%);
    top: 40%;
    left: 40%;
    animation-delay: -14s;
  }

  /* Particles */
  .particles {
    position: absolute;
    width: 100%;
    height: 100%;
  }

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: #22c55e;
    border-radius: 50%;
    opacity: 0.6;
    animation: particleFloat 8s linear infinite;
  }

  .particle-1 {
    left: 10%;
    animation-delay: 0s;
    animation-duration: 12s;
  }

  .particle-2 {
    left: 20%;
    animation-delay: -2s;
    animation-duration: 10s;
  }

  .particle-3 {
    left: 30%;
    animation-delay: -4s;
    animation-duration: 14s;
  }

  .particle-4 {
    left: 50%;
    animation-delay: -6s;
    animation-duration: 11s;
  }

  .particle-5 {
    left: 60%;
    animation-delay: -8s;
    animation-duration: 13s;
  }

  .particle-6 {
    left: 70%;
    animation-delay: -10s;
    animation-duration: 9s;
  }

  .particle-7 {
    left: 80%;
    animation-delay: -12s;
    animation-duration: 15s;
  }

  .particle-8 {
    left: 90%;
    animation-delay: -14s;
    animation-duration: 8s;
  }

  /* Enhanced main background overlay */
  .glehi-hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(
        circle at 20% 20%,
        rgba(74, 222, 128, 0.15) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 80%,
        rgba(34, 197, 94, 0.15) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 40% 60%,
        rgba(54, 83, 20, 0.1) 0%,
        transparent 50%
      ),
      linear-gradient(
        45deg,
        rgba(163, 177, 138, 0.1) 0%,
        rgba(218, 215, 205, 0.1) 100%
      );
    pointer-events: none;
    z-index: 0;
    animation: backgroundShift 20s ease-in-out infinite;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
    z-index: 1;
  }

  .header {
    text-align: center;
    margin-bottom: 4rem;
    animation: fadeInUp 0.8s ease-out;
  }

  .logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .logo-icon {
    width: 60px;
    height: 45px;
    color: #365314;
    animation: float 3s ease-in-out infinite;
  }

  .logo h1 {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: bold;
    color: #365314;
    margin: 0;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .subtitle {
    font-size: 1.2rem;
    color: #4a5d23;
    margin: 0;
    opacity: 0.9;
  }

  .main-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .phones-section {
    position: relative;
    height: 600px;
    animation: slideInLeft 1s ease-out 0.3s both;
  }

  .phone {
    position: absolute;
    transition: transform 0.3s ease;
  }

  .phone:hover {
    transform: translateY(-10px);
  }

  .phone-1 {
    top: 0;
    left: 50px;
    z-index: 2;
    animation: phoneFloat1 4s ease-in-out infinite;
  }

  .phone-2 {
    top: 80px;
    right: 50px;
    z-index: 1;
    animation: phoneFloat2 4s ease-in-out infinite 2s;
  }

  .phone-frame {
    width: 250px;
    height: 500px;
    background: linear-gradient(145deg, #1a1a1a, #2d2d2d);
    border-radius: 35px;
    padding: 8px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    position: relative;
  }

  .phone-frame::before {
    content: "";
    position: absolute;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: #666;
    border-radius: 2px;
  }

  .phone-screen {
    width: 100%;
    height: 100%;
    background: white;
    border-radius: 27px;
    overflow: hidden;
    position: relative;
  }

  .phone-content {
    padding: 2rem 1.5rem;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .app-header {
    margin-bottom: 2rem;
  }

  .status-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .signal-bars {
    display: flex;
    gap: 2px;
  }

  .bar {
    width: 3px;
    height: 8px;
    background: #22c55e;
    border-radius: 1px;
  }

  .bar:nth-child(2) {
    height: 12px;
  }

  .bar:nth-child(3) {
    height: 16px;
  }

  .location-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 2rem;
    animation: pulse 2s infinite;
  }

  .app-content h3 {
    font-size: 1.3rem;
    font-weight: bold;
    color: #365314;
    margin-bottom: 1rem;
    text-align: center;
  }

  .app-content p {
    font-size: 0.9rem;
    color: #666;
    line-height: 1.6;
    text-align: center;
    margin-bottom: 2rem;
  }

  .cta-button {
    background: #22c55e;
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: 25px;
    font-weight: bold;
    cursor: pointer;
    transition: transform 0.2s ease;
    margin-top: auto;
  }

  .cta-button:hover {
    transform: scale(1.05);
  }

  .logo-small {
    font-size: 1.5rem;
    font-weight: bold;
    color: #22c55e;
    text-align: center;
    margin-bottom: 2rem;
  }

  .menu-items {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .menu-item {
    padding: 0.8rem 1rem;
    border-radius: 8px;
    font-weight: 500;
    transition: background 0.2s ease;
  }

  .menu-item.active {
    background: #22c55e;
    color: white;
  }

  .social-icons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: auto;
  }

  .social-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .social-icon:hover {
    transform: scale(1.1);
  }

  .facebook {
    background: #1877f2;
  }

  .twitter {
    background: #1da1f2;
  }

  .instagram {
    background: linear-gradient(
      45deg,
      #f09433,
      #e6683c,
      #dc2743,
      #cc2366,
      #bc1888
    );
  }

  .features-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    animation: slideInRight 1s ease-out 0.6s both;
  }

  .feature-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    padding: 2rem;
    display: flex;
    align-items: center;
    gap: 1.5rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .feature-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, #22c55e, #16a34a);
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    flex-shrink: 0;
  }

  .feature-icon svg {
    width: 24px;
    height: 24px;
  }

  .feature-content h3 {
    font-size: 1.1rem;
    font-weight: bold;
    color: #365314;
    margin: 0;
  }

  /* Animation Keyframes */
  @keyframes morphFloat {
    0%,
    100% {
      transform: translateY(0px) translateX(0px) rotate(0deg) scale(1);
      border-radius: 50% 40% 60% 30%;
    }
    25% {
      transform: translateY(-20px) translateX(10px) rotate(90deg) scale(1.1);
      border-radius: 40% 60% 30% 50%;
    }
    50% {
      transform: translateY(-10px) translateX(20px) rotate(180deg) scale(0.9);
      border-radius: 60% 30% 50% 40%;
    }
    75% {
      transform: translateY(-30px) translateX(-10px) rotate(270deg) scale(1.05);
      border-radius: 30% 50% 40% 60%;
    }
  }

  @keyframes orbFloat {
    0%,
    100% {
      transform: translateY(0px) translateX(0px) scale(1);
    }
    33% {
      transform: translateY(-30px) translateX(20px) scale(1.1);
    }
    66% {
      transform: translateY(20px) translateX(-15px) scale(0.95);
    }
  }

  @keyframes particleFloat {
    0% {
      transform: translateY(100vh) scale(0);
      opacity: 0;
    }
    10% {
      opacity: 0.6;
    }
    90% {
      opacity: 0.6;
    }
    100% {
      transform: translateY(-100vh) translateX(100px) scale(1);
      opacity: 0;
    }
  }

  @keyframes backgroundShift {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes phoneFloat1 {
    0%,
    100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-15px) rotate(2deg);
    }
  }

  @keyframes phoneFloat2 {
    0%,
    100% {
      transform: translateY(0) rotate(0deg);
    }
    50% {
      transform: translateY(-10px) rotate(-1deg);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
  }

  @media (max-width: 768px) {
    .main-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .phones-section {
      height: 400px;
      margin: 0 auto;
      width: 300px;
    }

    .phone-frame {
      width: 200px;
      height: 400px;
    }

    .phone-1 {
      left: 20px;
    }

    .phone-2 {
      right: 20px;
      top: 60px;
    }

    .features-section {
      grid-template-columns: 1fr;
    }

    .feature-card {
      flex-direction: column;
      text-align: center;
    }

    /* Responsive adjustments for background elements */
    .shape {
      opacity: 0.05;
    }

    .orb {
      opacity: 0.2;
    }

    .particle {
      opacity: 0.4;
    }
  }
</style>
