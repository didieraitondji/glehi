  }

  .decorative-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .bg-shape {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(
      45deg,
      rgba(74, 124, 89, 0.05),
      rgba(107, 142, 35, 0.05)
    );
  }

  .shape-1 {
    width: 200px;
    height: 200px;
    top: 10%;
    left: 5%;
