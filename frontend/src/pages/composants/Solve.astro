---
// Solve.astro
export interface Props {
  title?: string;
  subtitle?: string;
  features?: Array<{
    number: number;
    title: string;
    description: string;
  }>;
}

const {
  title = "Le Problème que nous Résolvons",
  subtitle = "Pour les Producteurs : Vendez Mieux,\nProduisez Plus !",
  features = [
    {
      number: 1,
      title: "Publication Facile et Rapide",
      description:
        "Annoncez vos produits (type, prix, quantité) en temps réel, directement depuis votre téléphone.",
    },
    {
      number: 2,
      title: "Accès Direct aux Acheteurs",
      description:
        "Atteignez un large réseau de marchands, restaurateurs et ménages.",
    },
    {
      number: 3,
      title: "Paiement Mobile Sécurisé et Suivi de vos Ventes",
      description:
        "Recevez vos paiements de manière simple et sécurisée et des statistiques claires pour optimiser vos offres et vos profits.",
    },
    {
      number: 4,
      title: "Réduction des Coûts et des Pertes",
      description:
        "Éliminez les intermédiaires et vendez rapidement vos récoltes.",
    },
  ],
} = Astro.props;
---

<section class="solve-section">
  <div class="solve-container">
    <!-- Header -->
    <div class="solve-header">
      <h2 class="solve-title">{title}</h2>
      <p class="solve-subtitle">{subtitle}</p>
    </div>

    <!-- Contenu principal -->
    <div class="solve-content">
      <!-- Feature 1 -->
      <div class="feature-card feature-1">
        <div class="feature-number">
          <span>{features[0].number}</span>
        </div>
        <div class="feature-text">
          <h3>{features[0].title}</h3>
          <p>{features[0].description}</p>
        </div>
      </div>

      <!-- Feature 2 -->
      <div class="feature-card feature-2">
        <div class="feature-number">
          <span>{features[1].number}</span>
        </div>
        <div class="feature-text">
          <h3>{features[1].title}</h3>
          <p>{features[1].description}</p>
        </div>
      </div>

      <!-- Téléphone central -->
      <div class="phone-container">
        <div class="phone-bg-circle"></div>
        <img
          src="/images/banner_second.png"
          alt="Mockup de téléphone"
          class="phone-mockup"
        />
      </div>

      <!-- Feature 3 -->
      <div class="feature-card feature-3">
        <div class="feature-number">
          <span>{features[2].number}</span>
        </div>
        <div class="feature-text">
          <h3>{features[2].title}</h3>
          <p>{features[2].description}</p>
        </div>
      </div>

      <!-- Feature 4 -->
      <div class="feature-card feature-4">
        <div class="feature-number">
          <span>{features[3].number}</span>
        </div>
        <div class="feature-text">
          <h3>{features[3].title}</h3>
          <p>{features[3].description}</p>
        </div>
      </div>
    </div>

    <!-- Éléments décoratifs -->
    <div class="decorative-bg">
      <div class="bg-shape shape-1"></div>
      <div class="bg-shape shape-2"></div>
      <div class="bg-shape shape-3"></div>
    </div>
  </div>
</section>

<style>
  .solve-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, #f8fffe 0%, #f0f9f4 50%, #e8f5e8 100%);
    position: relative;
    overflow: hidden;
  }

  .solve-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
  }

  .solve-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .solve-title {
    font-size: clamp(1.75rem, 4vw, 3rem);
    font-weight: 700;
    color: #1a365d;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .solve-subtitle {
    font-size: clamp(1rem, 2vw, 1.125rem);
    color: #718096;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
    white-space: pre-line;
  }

  .solve-content {
    display: grid;
    grid-template-columns: 1fr 400px 1fr;
    grid-template-rows: auto auto;
    gap: 2rem;
    align-items: center;
    position: relative;
  }

  .feature-card {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 1.5rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.4s ease;
    position: relative;
    overflow: hidden;
    opacity: 0;
    transform: translateY(30px) scale(0.95);
  }

  .feature-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #4a7c59, #6b8e23);
    transform: scaleX(0);
    transition: transform 0.4s ease;
  }

  .feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .feature-card:hover::before {
    transform: scaleX(1);
  }

  .feature-1 {
    grid-column: 1;
    grid-row: 1;
    justify-self: end;
  }

  .feature-2 {
    grid-column: 3;
    grid-row: 1;
    justify-self: start;
  }

  .feature-3 {
    grid-column: 1;
    grid-row: 2;
    justify-self: end;
  }

  .feature-4 {
    grid-column: 3;
    grid-row: 2;
    justify-self: start;
  }

  .feature-number {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #4a7c59, #6b8e23);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
    font-size: 1.5rem;
    flex-shrink: 0;
    box-shadow: 0 8px 20px rgba(74, 124, 89, 0.3);
    animation: pulse 2s ease-in-out infinite;
  }

  .feature-text h3 {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .feature-text p {
    color: #718096;
    line-height: 1.6;
    font-size: clamp(0.875rem, 1.5vw, 0.95rem);
  }

  .phone-container {
    grid-column: 2;
    grid-row: 1 / 3;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    opacity: 0;
    transform: scale(0.8);
  }

  .phone-bg-circle {
    position: absolute;
    width: 300px;
    height: 300px;
    background: linear-gradient(
      135deg,
      rgba(74, 124, 89, 0.2),
      rgba(107, 142, 35, 0.1)
    );
    border-radius: 50%;
    z-index: 1;
    animation: rotate 20s linear infinite;
  }

  .phone-mockup {
    position: relative;
    z-index: 2;
    max-width: 100%;
    height: auto;
    animation: float 3s ease-in-out infinite;
  }

  .decorative-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .bg-shape {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(
      45deg,
      rgba(74, 124, 89, 0.05),
      rgba(107, 142, 35, 0.05)
    );
  }

  .shape-1 {
    width: 200px;
    height: 200px;
    top: 10%;
    left: 5%;
    animation: float 8s ease-in-out infinite;
  }

  .shape-2 {
    width: 150px;
    height: 150px;
    top: 60%;
    right: 10%;
    animation: float 10s ease-in-out infinite reverse;
  }

  .shape-3 {
    width: 100px;
    height: 100px;
    bottom: 20%;
    left: 15%;
    animation: float 6s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
      box-shadow: 0 8px 20px rgba(74, 124, 89, 0.3);
    }
    50% {
      transform: scale(1.05);
      box-shadow: 0 12px 30px rgba(74, 124, 89, 0.4);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .solve-content {
      grid-template-columns: 1fr 350px 1fr;
      gap: 1.5rem;
    }

    .feature-card {
      padding: 1.75rem;
    }

    .phone-bg-circle {
      width: 250px;
      height: 250px;
    }
  }

  @media (max-width: 1024px) {
    .solve-section {
      padding: 4rem 0;
    }

    .solve-header {
      margin-bottom: 3rem;
    }

    .solve-content {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      gap: 2.5rem;
    }

    .feature-card {
      justify-self: center !important;
      max-width: 600px;
      width: 100%;
      grid-column: 1 !important;
      grid-row: auto !important;
    }

    .phone-container {
      grid-column: 1;
      grid-row: auto;
      order: 3;
      padding: 2rem 0;
    }

    .feature-1 {
      order: 1;
    }

    .feature-2 {
      order: 2;
    }

    .feature-3 {
      order: 4;
    }

    .feature-4 {
      order: 5;
    }
  }

  @media (max-width: 768px) {
    .solve-section {
      padding: 3rem 0;
    }

    .solve-container {
      padding: 0 1.5rem;
    }

    .solve-header {
      margin-bottom: 2.5rem;
    }

    .solve-content {
      gap: 2rem;
    }

    .feature-card {
      flex-direction: column;
      text-align: center;
      gap: 1.25rem;
      padding: 1.5rem;
    }

    .feature-number {
      width: 55px;
      height: 55px;
      font-size: 1.35rem;
    }

    .phone-bg-circle {
      width: 220px;
      height: 220px;
    }

    .phone-mockup {
      max-width: 280px;
    }

    .bg-shape {
      opacity: 0.5;
    }

    .shape-1 {
      width: 150px;
      height: 150px;
    }

    .shape-2 {
      width: 120px;
      height: 120px;
    }

    .shape-3 {
      width: 80px;
      height: 80px;
    }
  }

  @media (max-width: 480px) {
    .solve-section {
      padding: 2.5rem 0;
    }

    .solve-container {
      padding: 0 1rem;
    }

    .solve-header {
      margin-bottom: 2rem;
    }

    .solve-content {
      gap: 1.5rem;
    }

    .feature-card {
      padding: 1.25rem;
      gap: 1rem;
      border-radius: 1.25rem;
    }

    .feature-number {
      width: 50px;
      height: 50px;
      font-size: 1.25rem;
    }

    .phone-container {
      padding: 1.5rem 0;
    }

    .phone-bg-circle {
      width: 180px;
      height: 180px;
    }

    .phone-mockup {
      max-width: 240px;
    }
  }

  @media (max-width: 360px) {
    .solve-section {
      padding: 2rem 0;
    }

    .feature-card {
      padding: 1rem;
    }

    .phone-mockup {
      max-width: 200px;
    }

    .phone-bg-circle {
      width: 160px;
      height: 160px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: "0px 0px -50px 0px",
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const target = entry.target as HTMLElement;
          target.style.opacity = "1";
          target.style.transform = "translateY(0) scale(1)";
        }
      });
    }, observerOptions);

    document.querySelectorAll(".feature-card").forEach((card) => {
      const cardElement = card as HTMLElement;
      cardElement.style.transition = "all 0.6s ease";
      observer.observe(card);
    });

    const phoneContainer = document.querySelector(".phone-container");
    if (phoneContainer) {
      const phoneElement = phoneContainer as HTMLElement;
      phoneElement.style.transition = "all 0.8s ease";
      observer.observe(phoneContainer);
    }
  });
</script>
