<style>
  .solve-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, #f8fffe 0%, #f0f9f4 50%, #e8f5e8 100%);
    position: relative;
    overflow: hidden;
  }

  .solve-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
  }

  .solve-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .solve-title {
