---
// AppVideoShowcase.astro
export interface Props {
  title?: string;
  subtitle?: string;
  videoUrl: string; // URL Vimeo, YouTube ou autre iframe
}

const {
  title = "Découvrez GléHi en Action",
  subtitle = "Une expérience intuitive pour connecter producteurs et acheteurs au Bénin",
  videoUrl,
} = Astro.props;

// Fonction pour convertir les URLs en embed URLs
function getEmbedUrl(url: string): string {
  // YouTube
  if (url.includes("youtube.com/watch")) {
    const videoId = url.split("v=")[1]?.split("&")[0];
    return `https://www.youtube.com/embed/${videoId}`;
  }
  if (url.includes("youtu.be/")) {
    const videoId = url.split("youtu.be/")[1]?.split("?")[0];
    return `https://www.youtube.com/embed/${videoId}`;
  }

  // Vimeo
  if (url.includes("vimeo.com/")) {
    const videoId = url.split("vimeo.com/")[1]?.split("?")[0];
    return `https://player.vimeo.com/video/${videoId}`;
  }

  // Si c'est déjà une URL embed ou autre, on la retourne telle quelle
  return url;
}

const embedUrl = getEmbedUrl(videoUrl);
---

<section class="video-showcase">
  <div class="video-container">
    <!-- Header -->
    <div class="video-header">
      <div class="badge">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
          <path d="M23 7l-7 5 7 5V7z" fill="currentColor"></path>
          <rect x="1" y="5" width="15" height="14" rx="2" fill="currentColor"
          ></rect>
        </svg>
        <span>Démo en Direct</span>
      </div>
      <h2 class="video-title">{title}</h2>
      <p class="video-subtitle">{subtitle}</p>
    </div>

    <!-- Video Player -->
    <div class="video-wrapper">
      <iframe
        src={embedUrl}
        class="video-iframe"
        frameborder="0"
        allow="autoplay; fullscreen; picture-in-picture"
        allowfullscreen
        title={title}></iframe>
    </div>

    <!-- Call to Action -->
    <div class="video-cta">
      <p class="cta-text">Prêt à rejoindre la révolution agricole ?</p>
      <a href="#waitlist" class="cta-button">
        Rejoindre la Liste d'Attente
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
          <path
            d="M5 12h14M12 5l7 7-7 7"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .video-showcase {
    padding: 6rem 0;
    background: linear-gradient(135deg, #f0f8f0 0%, #ffffff 50%, #e8f5e8 100%);
  }

  .video-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Header */
  .video-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(135deg, #4caf50, #66bb6a);
    color: white;
    padding: 0.5rem 1.25rem;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 20px rgba(76, 175, 80, 0.3);
  }

  .video-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 700;
    color: #1a365d;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .video-subtitle {
    font-size: clamp(1rem, 2vw, 1.2rem);
    color: #64748b;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* Video */
  .video-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    border-radius: 24px;
    overflow: hidden;
    box-shadow:
      0 25px 50px rgba(0, 0, 0, 0.1),
      0 10px 25px rgba(76, 175, 80, 0.05);
    margin-bottom: 3rem;
    background: #000;
  }

  .video-iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  /* CTA */
  .video-cta {
    text-align: center;
    padding: 3rem 2rem;
    background: linear-gradient(
      135deg,
      rgba(76, 175, 80, 0.05),
      rgba(102, 187, 106, 0.05)
    );
    border-radius: 20px;
    border: 1px solid rgba(76, 175, 80, 0.1);
  }

  .cta-text {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1a202c;
    margin: 0 0 1.5rem 0;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    background: linear-gradient(135deg, #4caf50, #66bb6a);
    color: white;
    padding: 1rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 8px 25px rgba(76, 175, 80, 0.3);
  }

  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 35px rgba(76, 175, 80, 0.4);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .video-showcase {
      padding: 3rem 0;
    }

    .video-container {
      padding: 0 1.5rem;
    }

    .video-header {
      margin-bottom: 2.5rem;
    }

    .video-wrapper {
      margin-bottom: 2rem;
      border-radius: 16px;
    }

    .cta-text {
      font-size: 1.25rem;
    }

    .cta-button {
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .video-showcase {
      padding: 2rem 0;
    }

    .video-container {
      padding: 0 1rem;
    }

    .video-cta {
      padding: 2rem 1rem;
    }
  }
</style>
