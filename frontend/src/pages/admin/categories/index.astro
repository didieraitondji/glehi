---
// Dashboard.astro
import TopBar from "../../composants/TopBar.astro";
import LeftBar from "../../composants/LeftBar.astro";
import "../../../styles/global.css";

// Props pour personnaliser les composants
const topBarProps = {
  userName: "LOREM IPSUM",
  notificationCount: 5,
};

const leftBarProps = {
  currentPage: "categories",
};
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Catégories | GléHi</title>
    <link
      rel="shortcut icon"
      href="/images/favicon_sbg.png"
      type="image/x-icon"
    />
  </head>
  <body class="bg-gray-50">
    <div class="min-h-screen flex">
      <!-- Sidebar gauche -->
      <div class="flex-none">
        <LeftBar {...leftBarProps} />
      </div>

      <!-- Contenu principal -->
      <div class="flex-1 flex flex-col">
        <!-- TopBar -->
        <TopBar {...topBarProps} />

        <!-- Zone de contenu -->
        <main class="flex-1 p-6"></main>
      </div>
    </div>
  </body>
</html>
